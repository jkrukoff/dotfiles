#!/bin/bash
# .bash_project_utopia

UTOPIA_PATH="$GOPATH/src/stash.itriagehealth.com/utopia/utopia"
export VIM_TAGS="$UTOPIA_PATH/tags"

# Only set CDPATH for interactive shells.
if [[ $- == *i* ]]; then
	CDPATH=".:$GOPATH/src/stash.itriagehealth.com"
fi

cd "$UTOPIA_PATH"
gotags -R=true . > tags
boot2docker -m 4096 up
$(boot2docker shellinit)
git fetch
git status
